! in ~/.xinitrc or ~/.xsession (depending on which one is used) or manually:
! xmodmap $HOME/.xkeyboard

clear Shift
clear Lock
clear Control
clear Mod1
clear Mod2
clear Mod3
clear Mod4
clear Mod5

add    Shift   = Shift_L Shift_R
add    Control = Control_L Caps_Lock Control_R
add    Mod1    = Alt_L Alt_R
add    Mod2    = Num_Lock
add    Mod5    = Scroll_Lock
!add    Lock = Caps_Lock

!keycode 107 = Delete

! for Apple Bluetooth Keyboar.
keycode 22 = BackSpace

!keycode 0x16 =	BackSpace
!keycode 0x6B =	Delete

! Reverse Configuration
!
! keycode  51 = BackSpace
! keycode  22 = backslash bar

! Normal Configuration
!
! keycode  22 = BackSpace
! keycode  51 = backslash bar
